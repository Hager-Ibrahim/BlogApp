<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.example.app.ScrollAwareFABBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_floating_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="32dp"
        app:backgroundTint="@color/colorFABTint"
        android:src="@drawable/white_create_icon"
        app:srcCompat="@drawable/white_create_icon"
        />

    <ProgressBar
        android:id="@+id/home_progressbar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>